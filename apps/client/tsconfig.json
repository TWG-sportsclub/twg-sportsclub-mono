{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "module": "esnext",
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "../../dist/out-tsc",
    "rootDir": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "**/*.js"
  ],
  "exclude": ["node_modules", "dist", ".next"]
}
