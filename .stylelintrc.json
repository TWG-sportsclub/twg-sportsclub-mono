{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "/tailwind/",
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "ignoreFiles": ["build/**", "dist/**", "**/reset.css", "**/bootstrap*.css"],
    "cache": true,
    "fix": true
  }
}
